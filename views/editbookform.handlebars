


<form method="POST">

    <div class="form-group">
        <label for='name'>Book Name</label>
        <input type=text id='firstname' name='name' class='form-control' value={{person.name}} >
    </div>
    <div class="form-group">
         <label for='Author'>Author</label>
        <input type=text id='dob' name='dob' class='form-control' value={{person.dob}} >
    </div>
    <div class="form-group">
       <label for='published'>Published</label>
        <input type=text id='imageurl' name='imageurl' class='form-control' value={{person.imageurl}} >
    </div>
    
    <input type="hidden" id="id" name="_id" value="{{person._id}}" />
    <button type=submit class="btn btn-primary">Save Changes</button>

      <a href='/staff/{{person.name}}'><button type=button class="btn btn-outline-danger">Cancel</button>
      </a> 
    </div>

</form>
